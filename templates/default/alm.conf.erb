<VirtualHost *:80>
    LogLevel warn
    ErrorLog /var/www/alm/shared/log/apache_error.log
    CustomLog /var/www/alm/shared/log/apache_access.log combined
    DocumentRoot /var/www/alm/current/public
	RailsEnv <%= node[:alm][:environment] %>
    ServerName <%= node[:alm][:host] %>
    ServerAdmin <%= node[:alm][:admin][:email] %>

    <Directory />
      Options FollowSymLinks
      AllowOverride None
    </Directory>

    <Directory /var/www/alm/current/public >
       AllowOverride all
       Options -MultiViews
    </Directory>

    # Important for ALM: keeps Apache from messing up encoded
    # embedded slashes in DOIs
    AllowEncodedSlashes On

    # Deflate
    AddOutputFilterByType DEFLATE text/html text/plain text/css text/xml application/xml application/xhtml+xml text/javascript
    BrowserMatch ^Mozilla/4 gzip-only-text/html
    BrowserMatch ^Mozilla/4.0[678] no-gzip
    BrowserMatch \bMSIE !no-gzip !gzip-only-text/html
</VirtualHost>